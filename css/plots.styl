.plot
  
  .heading
    border-bottom 1px solid $black
    width 100%
    height 30px
    overflow auto
    
    h3
      font-size 16px
      color $black
      float left
      margin 0px
  
    select
      float right
      vertical-align text-bottom
      
    button
      float right
      
  .graph
    clear both
    width 100%
    height 80%

    text
      font-family 'Open Sans', sans-serif
      font-size 11px
      
    text.label
      fill $blue

  circle.selected
    fill $red
  rect.selected
    fill $red
  
.axis path, .axis line
  fill none
  stroke #505050
  stroke-width 2px
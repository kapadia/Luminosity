.plot

  // Resize handles
  .resize
    position absolute
    width 10px
    height 10px
    background $red
    z-index 2
  
  .resize[data-corner='tl']
    cursor nw-resize
    top 0
    left 0
  .resize[data-corner='tr']
    cursor ne-resize
    top 0
    right 0
  .resize[data-corner='bl']
    cursor sw-resize
    bottom 0
    left 0
  .resize[data-corner='br']
    cursor se-resize
    bottom 0
    right 0
  
  .heading
    border-bottom 1px solid $black
    width 100%
    height 30px
    overflow auto
    
    h3
      font-size 16px
      color $black
      float left
      margin 0
  
    select
      float right
      vertical-align text-bottom
      
    button
      float right
      
  .graph
    clear both
    width 100%
    height 80%

    text
      font-family 'Helvetica Neue', 'Helvetica', sans-serif
      font-weight 200
      font-size 11px
      
    text.label
      fill $blue

  circle.selected
    fill $red
  rect.selected
    fill $red
  
.axis path, .axis line
  fill none
  stroke #505050
  stroke-width 2px
  
svg
  .bar
    fill $blue
.plot
  border 1px solid $black
  width 50%
  height 50%
  overflow scroll
  display none
  position absolute
  top 25%
  left 25%
  padding 20px
  border solid 1px #BBB
  background #FFF
  -webkit-box-shadow 0px 3px 6px rgba(0,0,0,0.25)
  
  .heading
    border-bottom 1px solid $black
    width 100%
    height 30px
    overflow auto
    
    h3
      font-size 16px
      color $black
      float left
      margin 0px
  
    select
      float right
      vertical-align text-bottom
      
    button
      float right
      
  .graph
    clear both
    width 100%
    height 80%

    text
      font-family 'Open Sans', sans-serif
      font-size 11px
      
    text.label
      fill $blue

circle.selected
  fill $red
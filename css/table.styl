
article.binarytable, article.table
  font-size 11px
  
  .controls
    padding-bottom 16px
    
    input[type='radio']
      display none

      &:checked + label
        background $gray3
        border-color $gray3 !important

    input[data-plot='one']:checked ~ .one
      display block

    input[data-plot='two']:checked ~ .two
      display block

    input[data-plot='three']:checked ~ .three
      display block

    label
      padding 2px 8px
      background $gray1
      color $black
      border-radius 4px
      border solid 1px $gray2
      text-shadow 0 -1px 0 rgba(0, 0, 0, 0.4)
      box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2)

      &:hover, &:focus
        background $gray2
        text-decoration none
        cursor pointer
        -webkit-transition-duration 0.2s
        -moz-transition-duration 0.2s
        transition-duration 0.2s
        
  .table-container
    overflow scroll
    height 100%

    table.fits-table
      width 100%
      height 100%
      text-align left
      border-spacing 0
      border-collapse collapse
  
      thead
        background-color $blue
        display table-header-group
    
        th
          color #000d18
          font-size 11px
          font-weight 600
          text-shadow 0px 1px 0px rgba(255, 255, 255, 0.25)
          text-transform uppercase
          padding 8px 4px
          border-bottom 1px solid #003461
          box-shadow 0px 1px 0px #0072C9
          text-align center
          
        th:not(:last-child)
          border-right 1px solid $gray1
    
        tr
          td
            padding-right 10px
  
      tbody
        display table-row-group
        overflow auto

        tr
          display table-row
    
          &:hover
            background $gray2
            
          &:not(:first-child)
            border-top 1px solid $black
    
          td
            padding 2px 4px
            text-align center
            font-size 12px
            padding 6px 4px
  
.table-container
  width 100%
  height 100%
  overflow auto

table.fits-table
  font-size 11px
  width 100%
  height 100%
  text-align left
  border-spacing 0
  border-collapse collapse
  margin 20px
  
  thead
    display table-header-group
    color $gray4
    
    th
      padding: 10px 12px
      color: $gray1
      text-shadow: 1px 1px 1px $blue2
      background-color: $blue
      text-align center
    
    th:not(:last-child)
      border-right 1px solid $gray1
    
    tr
      td
        padding-right 10px
  
  tbody
    display table-row-group
    overflow auto

    tr
      display table-row
    
      &:hover
        background $gray2
    
      td
        color $black
        padding 2px 4px
        border-top 1px solid @blue
        text-align center
  

#header
  width 560px
  height 400px
  overflow scroll
  position absolute
  top 40px
  left 170px
  padding 20px
  border solid 1px #bbb
  background #fff
  -webkit-box-shadow 0px 3px 6px rgba(0,0,0,0.25)
  -webkit-transition -opacity 0.0s ease-out
  display none
  
  .shown
    opacity 1.0
    z-index 100
    -webkit-transition-duration 0.25s

  table.header
    font-size 11px
    color $black
    width 300px
    border 0
    overflow scroll
  
    tbody
      overflow auto
      display block
      width 100%
    
      tr
        background-color #FAFAFA
        width 100%
        height 16px
      
        &:hover
          background $gray1
        
        td:first-child
          width 100px
          font-weight 700
          text-align right
          padding-right 4px
        
        td:last-child
          width 200px
          text-align left
          padding-left 4px
        
      tr:nth-child(2n+1)
        background-color #F7F7F7
      
        
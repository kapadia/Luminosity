
header, .select-hdu
  position fixed
  color $white
  font-size 16px
  
header
  width 96%
  background-color $blue
  z-index 1
  height 50px
  padding 10px 5.25%
  font-size 16px
  opacity 0.8
  
  p
    font-size 16px
    letter-spacing 3px
    font-weight 700
  
  .small
    font-size 11px
    padding-left 10px
  
  a
    color $white
    text-decoration none
    
    &:visited
      color $white
    
    &:hover
      color $blue

footer
  position fixed
  width 89.5%
  background-color $black
  z-index 1
  height 25px
  bottom 0
  left 0
  padding 10px 5.25%
  
  .resources
    font-size 12px
    color $white
    display table-cell
    vertical-align middle
    padding-top 10px
    
    p
      font-weight 700
    a
      color $white
      font-weight 200
      text-decoration none
      
      &:before
        content: '\2003'
      
      &:hover
        color $red

.select-hdu
  z-index 2
  right 0
  overflow hidden
  cursor pointer
  overflow hidden
  width 80px
  text-align right
  
  padding 10px 2% 10px 0
  transition all 200 linear
  
  &:hover
    color $blue
    
    > ul
      height auto
  
  // &:active
  //   > ul
  //     height 0
  
  ul
    height 0
    font-size 11px
    list-style-type decimal-leading-zero
    background-color $black
    opacity 0.8
    width 80px
    text-align left
    max-height 300px
    overflow scroll
    transition all 200 linear
    
    li
      line-height 20px
      font-family "Times New Roman", Georgia, Serif
      font-size 12px
      color $white
      font-variant small-caps
      padding 10px 0
      
      &:hover
        color $blue
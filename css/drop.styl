.frame
  width 100%
  height 100%
  position absolute
  background-color $gray1
  
  .center
    left 50%
    top 50%
    width 200px
    height 20px
    margin -10px 0 0 -100px
    position absolute
    color $blue
    text-align center
    font-size 18px
    font-weight 200
  
.over
  background-color $gray2
  
#loading
  display none

.help-button
  position fixed
  bottom 10px
  font-weight 700
  font-size 20px
  color $black
  width 28px
  height 28px
  border-radius 14px
  border 1px solid $black
  text-align center

  &:hover
    color $red
    cursor pointer
    
#tutorial
  right 60px

#help
  right 20px

.help
  a
    color $blue
    
    &:hover
      color $blue

  a.bold
    font-weight 700

#commit
  a
    position fixed
    height 30px
    bottom 0px
    left 20px
    font-size 10px
    color $black
    text-decoration none
    opacity 0.3
    z-index 1
  
    &:hover
      color $red
      opacity 1
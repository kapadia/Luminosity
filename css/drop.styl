input[type='checkbox'], input[type='radio']
  display none

label.circle
  position fixed
  bottom 10px
  font-weight 700
  font-size 20px
  color $black
  width 28px
  height 28px
  border-radius 14px
  border 1px solid $black
  text-align center
  cursor pointer
  
  &:hover
    color $red

label[for='help']
  right 20px

label[for='tutorial']
  right 60px
  
#help:checked ~ .help
  display block

#tutorial:checked ~ .tutorial
  display block

#requirements:checked ~ .requirements
  display block

.frame
  width 100%
  height 100%
  position absolute
  background-color $gray1
  
  .center
    left 50%
    top 50%
    width 200px
    height 20px
    margin -10px 0 0 -100px
    position absolute
    color $blue
    text-align center
    font-size 18px
    font-weight 200
  
.over
  background-color $gray2
  
#loading
  display none

.help
  a
    color $blue
    
    &:hover
      color $blue

  a.bold
    font-weight 700

.links
  position fixed
  bottom 0
  left 30px
  
  a
    position relative
    display inline-block
    font-size 10px
    color $black
    opacity 0.5
    text-decoration none
    height 30px
    bottom 0
    z-index 1
    
    &:hover
      color $red
      opacity 1
    
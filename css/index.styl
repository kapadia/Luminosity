$blue = #0172E6
$red = #CD3E20
$gray1 = #F3F3F3
$gray2 = #E5E5E5
$gray3 = #CFCFCF
$gray4 = #505050
$black = #505050

$primary = $blue
$image = $primary
$table = #D69638
$bintable = #FD0CD9

@import url("http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,400italic,700|Open+Sans+Condensed:700,300")
@import './mixin'
@import './drop'
@import './hdu'
@import './header'
@import './image'
@import './table'
@import './d3'


html, body
  margin 0 auto
  background-color $gray1
  color $gray3
  font-family 'Open Sans', sans-serif

#luminosity
  height 100%
  overflow auto

  #hdus
    width 100%
    background-color $gray2
    position fixed
    top 0px
    left 0px
    z-index 2
    
  #toolbar
    width 100%
    height 16px
    background-color $gray3
    color $gray2
    position fixed
    bottom 0px
    left 0px
    z-index 2
  
.plot
  float left

.column-names
  font-weight 700

div.axes
  float left
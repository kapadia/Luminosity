$blue   = #0172E6
$blue2  = #1E90FF
$blue3  = #00BFFF
$darkblue = #00264C
$red    = #CD3E20
$gray1  = #F3F3F3
$gray2  = #E5E5E5
$gray3  = #CFCFCF
$gray4  = #505050
$gray5  = #FAFAFA
$black  = #505050

@import './mixin'
@import './modal'
@import './drop'
@import './header'
@import './image'
@import './table'
@import './plots'

html, body
  margin 0 auto
  background $gray1
  color $black
  font-family 'Helvetica', sans-serif
  width 100%
  height 100%
  
#luminosity
  margin 0 auto
  width 100%
  height 100%
  
  #controls
    height 4%
    padding-top 1%
    text-align center
    
    input[name='hdu']
      display none
      
      &:checked + label
        background #333
        border-color #333 !important
    
    label
      border-radius 6px
      display inline-block
      width 12px
      height 12px
      background #BBB
      cursor pointer
      transition all 0.8s ease-out
  
  #overflow
    width 100%
    height 94%
    overflow hidden
    
    #dataunits
      width 400%
      height 100%
      padding 1% 0
      position relative
      background $gray5
      box-shadow 1px 1px 2px #666
      
      article
        position absolute
        left -110%
        margin 0
        width 25%
        height 100%
        opacity 0
        transition all 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)

        -webkit-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
        -moz-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
        transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
        
        div.container
          margin 0 auto
          width 90%
          height 100%
          padding 0 5%
      
      article.current
        left 0
        opacity 1

      article.current ~ article
        left 110%
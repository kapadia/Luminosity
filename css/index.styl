.hide
  display none

.tooltip
  position fixed
  background-color #202020
  color #FAFAFA
  opacity 0.9
  border-radius 4px
  font-family helvetica neue, sans-serif
  font-weight 200
  font-size 9px
  padding 0 4px
  margin 0
  
  &:before
    content: ""
    position: absolute
    width 0
    height 0
    top 30%
    left 100%
    border-top 6px solid transparent
    border-bottom 6px solid transparent
    border-left 6px solid #202020


html, body
  margin 0 auto
  background $white
  font-size 12px
  font-family 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  
#luminosity
  margin 0 5%
  padding-top 40px
  
#overflow
  width 100%
  overflow-x hidden
  
#dataunits
  width 400%
  height 94%
  position relative
  
  article
    position absolute
    padding 50px 0
    left -110%
    margin 0
    width 25%
    opacity 0
    transition all 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
    
    -webkit-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
    -moz-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
    transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
    
    div.container
      width 100%
      min-width 1000px
    
  article.current
    left 0
    opacity 1
  
  article.current ~ article
    left 110%
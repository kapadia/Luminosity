.brush .extent
  fill $blue
  stroke #fff
  fill-opacity 0.125
  shape-rendering crispEdges

.viewport-container
  float left
  margin-right 40px
  
  .cursors
    float left
    width 24px
    
    input[name="cursor"], input[name="colormap"]
      display none
      
      &:checked + label
        background #333
        border-color #333 !important
    
    label
      display block
      width 24px
      height 24px
      background-color $gray1
      cursor pointer
      box-sizing border-box
      
      &:hover
        border-left 3px solid orange
    
  .viewport
    float left
    width 600px
    height 600px
    cursor crosshair
  
  .stretch-fns
    float left
    
    input[name="fn"]
      display none
      
      &:checked + label
        background #333
        border-color #333 !important
    
    label
      display block
      width 24px
      height 24px
      background-color $gray1
      cursor pointer
      box-sizing border-box
      
      &:hover
        border-left 3px solid orange

.tools
  overflow hidden
  height 600px
  
  .row
    display block
    height 50%
    
    .info
      float left
      padding 10px
      
      .row
        display table-row
        line-height 16px
        
        .key, .value
          display table-cell
          text-align left
        
        .key
          text-align right
          font-weight 700
          padding-right 10px
  
  .pixel-table
    float right
    padding 10px
    display table
    
    p
      font-weight 700
    
    .pixel-row
      display table-row
      
      .pixel
        display table-cell
        padding 4px
        width 66px
    
    

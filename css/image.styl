.brush .extent
  fill $blue
  stroke #fff
  fill-opacity 0.125
  shape-rendering crispEdges

.viewport-container
  float left
  margin-right 40px
  
  .cursors
    float left
    width 24px
    
    input[name="cursor"]
      display none
      
      &:checked + label
        background #333
        border-color #333 !important
    
    label
      display block
      width 24px
      height 24px
      background-color $gray1
      cursor pointer
    
  .viewport
    float left
    width 600px
    height 600px
    cursor crosshair
  
  .stretch-fns
    float left
    
    input[name="fn"]
      display none
      
      &:checked + label
        background #333
        border-color #333 !important
    
    label
      display block
      width 24px
      height 24px
      background-color $gray1
      cursor pointer

.tools
  overflow hidden
  border 1px solid $blue
  height 600px
  
  .stretch
    float right
    .options
      margin-top 10px
      
      input[name='stretch-fn']
        display none

        &:checked + label
          background #333
          border-color #333 !important

      label
        // display inline-block
        // width 20px
        // height 20px
        margin 6px
        background-color $blue
        color $white
        padding 10px 8px
        cursor pointer
        transition all 100 ease-out

        &:hover
          background-color $blue2
  
  .row
    display block
    height 50%
    
    .info
      float left
      
      .row
        display table-row
        
        .key, .value
          display table-cell
          text-align left
        
        .key
          text-align right
          font-weight 700
          padding-right 10px

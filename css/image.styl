.brush .extent
  fill $blue
  stroke #fff
  fill-opacity 0.125
  shape-rendering crispEdges

.viewport
  width 600px
  height 600px
  cursor crosshair
  float left

.tools
  float right
  border 1px solid $blue
  
  .stretch
    float right
    .options
      
      input[name='stretch-fn']
        display none

        &:checked + label
          background #333
          border-color #333 !important

      label
        display inline-block
        width 20px
        height 20px
        margin 6px
        background-color $blue
        cursor pointer
        transition all 100 ease-out

        &:hover
          background-color $blue2
  
  .row
    display block
    
    .info
      float left
      
      .row
        display table-row
        
        .key, .value
          display table-cell
          text-align left
        
        .key
          text-align right
          font-weight 700
          padding-right 10px
